@{
    ViewBag.Title = "OperasBas";
}
<h2>OperasBas</h2>
<div class="container">
    <div class="row">
        <form action="/" method="post">
            <label>Numero1:</label>
            <input type="text" name="n1" value="" />
            <br />
            <label>Numero2:</label>
            <input type="text" name="n2" value="" />
            <br />
            <label>Operacion:</label>
            <fieldset>
                <legend>Elige la operacion</legend>
                <label>
                    <input type="radio" name="ope" value="suma"> Sumar
                </label>
                <label>
                    <input type="radio" name="ope" value="resta"> Restar
                </label>
                <label>
                    <input type="radio" name="ope" value="multiplicacion"> Multiplicar
                </label>
                <label>
                    <input type="radio" name="ope" value="divicion"> Dividir
                </label>
            </fieldset>
            <input type="submit" name="name" value="Calcular" />
        </form>

    </div>
    <div class="col-lg-6">
        <h1>La suma es: @ViewBag.Res</h1>
    </div>
</div>